<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomLayout"
    android:orientation="horizontal"
    android:background="#FF0000"
    app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnViewSidebar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#0359FF"
            android:src="@drawable/ic_view_sidebar"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btnViewHome"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#0359FF"
            android:src="@drawable/ic_view_home"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btnAddTask"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#0359FF"
            android:src="@drawable/ic_add_task"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btnViewCalendar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#0359FF"
            android:src="@drawable/ic_calendar"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btnViewProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#0359FF"
            android:src="@drawable/ic_view_profile"
            android:scaleType="fitCenter"/>
</LinearLayout>